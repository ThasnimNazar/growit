<%- include('../public/includes/header.ejs') %>



<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.3/css/all.css"/>

    <!-- Header -->

    <section style="background-color: white">
      <div class="container py-5">
        <div class="row">
          <div class="col-lg-8">
            <div class="card mb-4">
              <div class="card-body">
                <h4>My Orders</h4>
                <br>     

                <!--================Order Details Area =================-->
                <section class="order_details section_gap">
                    <div class="container">
                        <div class="row order_d_inner">
                            <div class="col-md-6">
                                <div class="details_item">
                                    <h5>Order Info</h5>
                                    <br>
                                    <ul class="list">
                                        <li>Order ID: <%=orders[0]._id%></li>
                                        <li>Date: <%=orders[0].createdAt.toLocaleString()%></li>
                                        <li>Total: ₹<%=orders[0].totalPrice%></li>
                                        <li>Payment method: <%=orders[0].paymentMethod%></a></li>
                                        <li>Payment Status: <%=orders[0].paymentStatus%></a></li>
                                        <li>Order Status:<%=orders[0].orderStatus%></li>
                                        <li>couponCode:<%=orders.couponCode%></li>
                                    </ul>
                                </div>
                            </div>
                        
                            <div class="col-md-6">
                                <div class="details_item">
                                    <h5>Shipping Address</h5>
                                    <br>
                                    <ul class="list">
                                        <li>Name: <%=address.item.name%></li>
                                        <li>Adress: <%=address.item.address%></li>
                                        <li>City: <%=address.item.city%></li>
                                        <li>Locality: <%=address.item.locality%></li>
                                        <li>Pincode: <%=address.item.pincode%></li>
                                        <li>State: <%=address.item.state%></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="order_details_table py-4">
                            <h2>Order Details</h2>
                            <br>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">Product Image</th>
                                            <th scope="col">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach(function(product,index) {%>

                                        <tr>
                                            <td>
                                                <img src="../public/product-images/create-images/<%=product.image[0]%>" width="40" height="50" class="img-xs" alt="Item">
                                            </td>
                                            <td>
                                                <p><%=product.productName%></p>
                                            </td>
                                            <td>
                                                <p>₹<%=product.productPrice%></p>
                                            </td>
                                            <td>
                                                <h5><%=product.quantity%></h5>
                                            </td>
                                            <td>
                                                <p>₹<%=product.productPrice*product.quantity%></p>
                                            </td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                                
                                <div>
                                    <a href="/invoice?id=<%=orders[0]._id%>" class="btn btn-primary">Download Invoice</a> 
                                    </div>
                            </div>
                        </div>
                    </div>
                </section>

                <!--================End Order Details Area =================-->
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

        <script src="../user-assets/js/vendor/jquery-2.2.4.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>

