<body>
    <%- include('./includes/sidebar.ejs')%>
    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Add Categories </h2>
                </div>
            </div>
            <div class="card p-20 h-30">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <form id="myform" method="POST" action="/admin/editCategory">
                                <div class="mb-4">
                                    <input type="text" placeholder="Type here" class="form-control" id="name" name="category" onkeyup="titleValidation()"  value="<%= category.name %>" required>
                                    <!-- <label for="product_name" class="form-label" id="catLabel">Category</label>
