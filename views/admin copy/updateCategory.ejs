                                </div>
                                <span id="title-error"></span>
                                <div class="mb-4">
                                    <label class="form-label ">Description</label>
                                    <textarea placeholder="Type here" class="form-control ellipsis-text" name="description" style=" text-overflow: ellipsis;" onkeyup="descriptionValidation()" id="description" ><%=category.description%></textarea>
                                     <!-- <label for="product_name" class="form-label" id="desLabel">Description</label>
                                    <textarea name="description" id="description" class="form-control" rows="4" placeholder="description here.."></textarea> -->
                                </div>
