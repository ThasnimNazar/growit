<body>
    <div class="screen-overlay"></div>
    <%- include('./includes/sidebar.ejs') %>
    <main class="main-wrap">
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div>
            </div>
            <div>
                <a href="/admin/loadcategory" class="btn btn-primary mb-4">Create category</a>
                <a href="/admin/couponoffer" class="btn btn-primary mb-4">
                    jj
                </a>
            </div>
            <!-- <div>
                <a href="/admin/couponoffer" class="btn btn-primary mb-4">Create category offer</a>
            </div> -->
            
            <div>
            <a href="/admin/couponoffer" class="btn btn-primary mb-4">
                jj
            </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                       
                        
                        <div class="col-md-9">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th class="text-center">
                                                
                                            </th>
                                    
                                            <th>Name</th>
                                            <th>Description</th>
                                            <th>status</th>
                                            <!-- <th>category</th> -->
                                            <th class="text-end">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% categories.forEach(category => { %>
                                            <tr>
                                                <td class="text-center">
                                                </td>
                                                <td  class="tooltip-ellipsis" title="<%=category.name %>"><b><%=category.name %></b></td>
                                                <td title="<%=category.description %>" class="tooltip-ellipsis"><%=category.description %></td>
                                                <td> <%if(category.status==true){%>
                                                    <div class="col-lg-2 col-sm-2 col-4 col-status">
                                                        <span class="badge rounded-pill alert-success">Active</span>
                                                    </div>
                                                    <%}else{%>
                                                        <div class="col-lg-2 col-sm-2 col-4 col-status">
                                                            <span class="badge rounded-pill alert-warning">Unlisted</span>
                                                        </div>
                                                        <%}%></td>
                                                <td class="text-end">
                                                    <div class="dropdown">
                                                        <a href="#" data-bs-toggle="dropdown" class="btn btn-light rounded btn-sm font-sm"> <i class="material-icons md-more_horiz"></i> </a>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" href="/admin/loadeditcategory?id=<%=categories._id %>">Edit info</a>
                                                            <%if(categories.isListed==false){%>
                                                            <a class="dropdown-item text-danger" href="/admin/unListCategory?id=<%=categories._id %>">Un List</a>
                                                            <%}else{%>
                                                                <a class="dropdown-item" href="/admin/reListCategory?id=<%=categories._id %>">Re List</a>
                                                                <%}%>   
                                                        </div>
                                                    </div> 
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                            
                                           
                                              
                                        
                                           
                                          
                                   
                                </table>
                            </div>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
